<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
    <ListView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/listView1"
              android:layout_alignParentStart="true" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
              android:layout_marginTop="50dp"></ListView>
    <TextView android:layout_width="315dp" android:layout_height="50dp" android:id="@+id/songDisplay"
              android:textColor="@color/black" android:textSize="20dp"
              android:padding="10dp"
              android:layout_alignParentTop="true" android:background="@drawable/textview_border"
              android:layout_alignParentStart="true" android:layout_alignParentLeft="true"/>
    <Button
            android:id="@+id/buttonPrev"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:text="Prev"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimary"/>
    <Button
            android:id="@+id/buttonNex"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:text="Next"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimary"/>
    <Button
            android:id="@+id/buttonPlay"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Play"
            android:textColor="@color/white"/>
    <Button
            android:text="Shuffle"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/buttonShuff" android:layout_above="@+id/buttonPrev"
            android:layout_alignLeft="@+id/buttonNex" android:layout_alignParentEnd="true" android:layout_alignParentRight="true"/>
</RelativeLayout>