<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" android:background="@color/black">
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@color/black" android:layout_above="@id/songDisplayContainer">
        <ListView android:layout_width="match_parent" android:id="@+id/listView1"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="5dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
        </ListView>
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_above="@id/progressViewContainer" android:id="@+id/songDisplayContainer" android:background="@color/black">
        <TextView android:layout_width="match_parent" android:layout_height="25dp" android:id="@+id/songDisplay"
                  android:textColor="@color/white" android:textSize="20dp"
                  android:paddingLeft="10dp"
                  android:includeFontPadding="false"
                  android:backgroundTint="@color/colorPrimary"
                  android:text="Placeholder"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/colorPrimary"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_above="@+id/buttonContainer" android:id="@+id/progressViewContainer" android:background="@color/black">
        <TextView
                android:id="@+id/digitDisp"
                android:layout_width="100dp"
                android:layout_height="wrap_content" android:layout_alignParentStart="true" android:layout_alignParentLeft="true"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:text="00:00-00:00"
                android:paddingLeft="0dp"
                android:includeFontPadding="false"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="220dp"
                android:id="@+id/songDurBar" android:max="100"
                android:indeterminateTint="@color/green"
                android:indeterminateTintMode="src_in"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:progress="100"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="0dp"
                android:layout_toRightOf="@id/digitDisp"
                android:background="@color/colorPrimary"
                android:layout_alignTop="@id/digitDisp"
                android:layout_alignBottom="@id/digitDisp"
                android:layout_marginRight="5dp"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/footer" android:id="@+id/buttonContainer" android:layout_marginRight="5dp" android:layout_marginLeft="5dp" android:background="@color/colorPrimary">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@color/black" android:layout_centerHorizontal="true" >
            <ImageButton
                    android:id="@+id/buttonPrev"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/main_btnprev"
                    style="@style/SelectableItemBackground"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginRight="2dp"
            />
            <ImageButton
                    android:id="@+id/buttonPlay"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/main_btnplay"
                    style="@style/SelectableItemBackground"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginRight="0dp"
            />
            <ImageButton
                    android:id="@+id/buttonNex"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/main_btnnext"
                    style="@style/SelectableItemBackground"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginRight="2dp"
            />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_alignParentBottom="true" android:id="@+id/footer" >
        <RelativeLayout android:layout_width="match_parent" android:layout_height="5dp" android:id="@+id/footer1"
                        android:layout_alignTop="@id/footer2" android:layout_above="@+id/footer2"  android:background="@color/black">
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="5dp" android:id="@+id/footer2"
                        android:background="@color/colorPrimary">
        </RelativeLayout>
    </LinearLayout>
    <Button
            android:text="Shuffle"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/buttonShuff"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_above="@+id/songDisplayContainer"/>
</RelativeLayout>
